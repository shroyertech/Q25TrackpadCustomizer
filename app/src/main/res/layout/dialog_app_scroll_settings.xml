<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">

    <LinearLayout
        android:orientation="vertical"
        android:padding="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvScrollDialogTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="App settings"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <!-- QUICK TOGGLE (PER-APP) -->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Quick toggle (for this app)"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_marginBottom="4dp" />

        <CheckBox
            android:id="@+id/checkAppQuickToggleUseGlobal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Use global Quick Toggle settings"
            android:textSize="12sp"
            android:layout_marginBottom="6dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">

            <CheckBox
                android:id="@+id/checkAppQuickToggleMouse"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Mouse"
                android:textSize="12sp" />

            <CheckBox
                android:id="@+id/checkAppQuickToggleKeyboard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Keyboard"
                android:textSize="12sp" />

            <CheckBox
                android:id="@+id/checkAppQuickToggleScroll"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Scroll"
                android:textSize="12sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            android:layout_marginBottom="10dp" />

        <!-- PRIMARY HOLD (PER-APP) -->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Primary hold switching"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Primary Hold mode"
            android:textSize="12sp" />

        <Spinner
            android:id="@+id/spinnerAppHoldMode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Primary Hold key"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tvAppHoldKeyCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SHIFT LEFT (59)"
            android:textSize="12sp"
            android:textColor="?android:attr/textColorSecondary"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="6dp" />

        <Button
            android:id="@+id/btnSetAppHoldKey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Set Primary Hold key"
            android:layout_marginBottom="6dp" />

        <CheckBox
            android:id="@+id/checkHoldAllowedInTextApp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Allow Primary Hold switching in text fields"
            android:textSize="12sp"
            android:layout_marginBottom="4dp" />

        <CheckBox
            android:id="@+id/checkAppHoldDoublePressRequired"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Primary Hold: require double press + hold"
            android:textSize="12sp"
            android:layout_marginBottom="10dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            android:layout_marginBottom="10dp" />

        <!-- SECONDARY HOLD (PER-APP) -->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Secondary hold switching"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_marginBottom="4dp" />

        <CheckBox
            android:id="@+id/checkAppHold2UseHold1DoublePressHold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Secondary Hold is triggered by Primary Hold double-press + hold"
            android:textSize="12sp"
            android:layout_marginBottom="6dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Secondary Hold mode"
            android:textSize="12sp" />

        <Spinner
            android:id="@+id/spinnerAppHold2Mode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Secondary Hold key"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tvAppHold2KeyCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SHIFT RIGHT (60)"
            android:textSize="12sp"
            android:textColor="?android:attr/textColorSecondary"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="6dp" />

        <Button
            android:id="@+id/btnSetAppHold2Key"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Set Secondary Hold key"
            android:layout_marginBottom="6dp" />

        <CheckBox
            android:id="@+id/checkHold2AllowedInTextApp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Allow Secondary Hold switching in text fields"
            android:textSize="12sp"
            android:layout_marginBottom="4dp" />

        <CheckBox
            android:id="@+id/checkAppHold2DoublePressRequired"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Secondary Hold: require double press + hold"
            android:textSize="12sp"
            android:layout_marginBottom="10dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            android:layout_marginBottom="10dp" />

        <!-- SCROLL (PER-APP) -->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Scroll wheel settings"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tvScrollSensitivityLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sensitivity"
            android:textSize="12sp" />

        <Spinner
            android:id="@+id/spinnerAppScrollSensitivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp" />

        <CheckBox
            android:id="@+id/checkAppScrollHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enable horizontal scroll"
            android:textSize="12sp"
            android:layout_marginBottom="4dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">

            <CheckBox
                android:id="@+id/checkAppScrollInvertVertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Invert vertical"
                android:textSize="12sp" />

            <CheckBox
                android:id="@+id/checkAppScrollInvertHorizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Invert horizontal"
                android:textSize="12sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            android:layout_marginBottom="10dp" />

        <!-- AUTO KEYBOARD (PER-APP) -->

        <CheckBox
            android:id="@+id/checkAppAutoKeyboard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Auto keyboard on text input for this app"
            android:textSize="12sp" />

    </LinearLayout>
</ScrollView>